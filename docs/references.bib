@article{bloemendaalGenerationGlobalSynthetic2020,
  title = {Generation of a Global Synthetic Tropical Cyclone Hazard Dataset Using {{STORM}}},
  author = {Bloemendaal, Nadia and Haigh, Ivan D. and {de Moel}, Hans and Muis, Sanne and Haarsma, Reindert J. and Aerts, Jeroen C. J. H.},
