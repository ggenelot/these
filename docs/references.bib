@article{rodes-bachsOpenSciencePractices2025,
  title = {Open {{Science Practices}} in {{Integrated Assessment Models}}},
  author = {{Rod{\'e}s-Bachs}, Cl{\`a}udia and Sampedro, Jon and Frilingou, Natasha and Gardumi, Francesco and Lo Giudice, Camilla},
  year = 2025,
