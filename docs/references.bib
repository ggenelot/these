}

@article{krienCanWeImprove2018,
  title = {Can {{We Improve Parametric Cyclonic Wind Fields Using Recent Satellite Remote Sensing Data}}?},
  author = {Krien, Yann and Arnaud, Ga{\"e}l and C{\'e}c{\'e}, Rapha{\"e}l and Ruf, Chris and Belmadani, Ali and Khan, Jamal and Bernard, Didier and Islam, A. K. M. S. and Durand, Fabien and Testut, Laurent and Palany, Philippe and Zahibo, Narcisse},
