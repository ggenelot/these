@article{lazarusDisasterTrapCyclones2022,
  title = {The Disaster Trap: {{Cyclones}}, Tourism, Colonial Legacies, and the Systemic Feedbacks Exacerbating Disaster Risk},
  shorttitle = {The Disaster Trap},
  author = {Lazarus, Eli D.},
  year = 2022,
