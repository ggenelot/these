@article{tangSpatialScaleDependence2023,
  title = {Spatial {{Scale Dependence}} of {{Tropical Cyclone Damage Function}}: {{Evidence From}} the {{Mainland}} of {{China}}},
  shorttitle = {Spatial {{Scale Dependence}} of {{Tropical Cyclone Damage Function}}},
  author = {Tang, Rumei and Wu, Jidong and Ding, Wei and Nie, Juan},
  year = 2023,
  journal = {Earth's Future},
  volume = {11},
