@article{jafinoEnablingAssessmentDistributive2021,
  title = {Enabling Assessment of Distributive Justice through Models for Climate Change Planning: {{A}} Review of Recent Advances and a Research Agenda},
  shorttitle = {Enabling Assessment of Distributive Justice through Models for Climate Change Planning},
  author = {Jafino, Bramka Arga and Kwakkel, Jan H. and Taebi, Behnam},
