@article{parksTropicalCycloneExposure2021,
  title = {Tropical Cyclone Exposure Is Associated with Increased Hospitalization Rates in Older Adults},
  author = {Parks, Robbie M. and Anderson, G. Brooke and Nethery, Rachel C. and {Navas-Acien}, Ana and Dominici, Francesca and Kioumourtzoglou, Marianthi-Anna},
  year = 2021,
