@misc{xuNorthAtlanticSynthetic2023,
  title = {A {{North Atlantic}} Synthetic Tropical Cyclone Tracks, Intensity, and Rainfall Dataset},
  author = {Xu, Wenwei and Balaguru, Karthik and Judi, David and Rice, Julian and Leung, Lai-Yung},
  year = 2023,
