@article{feixModelingPostgrowthConceptuala,
  title = {Modeling for Post-Growth: {{A}} Conceptual Agenda},
  author = {Feix, Thibaut and Ma{\"i}zi, Nadia},
  abstract = {Modeling is a structuring element of economic literature and decision making. However, it conveys a quantitative bias and contribute to the objectivization of economic theories. First, this paper exposes how different ethical and political considerations percolate through the modeling process, shaping both the construction and interpretation of models. It also shows the importance of the epistemic position of modelers and model users in the modeling exercise, stressing the need to explicitly state their stances in their analysis. We argue that an analytical position is particularly suited for post-growth modeling. This approach departs from qualitative narratives of possible and/or desirable futures, using models to back-cast pathways towards these futures. Doing so, modeling serves multiple purposes: it checks the consistency of narratives and identify potential challenges; it avoids circumscribing analysis to the boundaries of models, exploring alternative imaginaries by giving agency to modelers and scenarists; and it gives quantitative life to qualitative narratives. Second, we present a fundamental distinction characterizing neoclassical and ecological economics. Accordingly, we propose three conceptual modeling strategies to cover the entirety of the ends-means spectrum claimed by ecological economics and post-growth: policy-based, biophysical and need-based modeling. While the first two know rapid developments in recent post-growth literature, need-based modeling remains underdeveloped, despite its unique potential to explore the structural and qualitative changes at the heart of postgrowth narratives. Filling this gap represents a critical avenue for future research and practice.},
  langid = {english}
